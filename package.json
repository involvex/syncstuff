{
  "name": "syncstuff-monorepo",
  "version": "0.0.1",
  "private": true,
  "packageManager": "pnpm@10.28.0",
  "type": "module",
  "workspaces": ["apps/*", "packages/*", "apps/mobileapp/electron"],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "format": "biome format . --write",
    "format:check": "biome format .",
    "typecheck": "turbo run typecheck",
    "clean": "turbo run clean",
    "android": "pnpm --filter @syncstuff/app android",
    "web": "pnpm --filter @syncstuff/web dev",
    "api": "pnpm --filter @syncstuff/api dev",
    "mobile": "pnpm --filter @syncstuff/app android",
    "desktop": "pnpm --filter @syncstuff/desktop dev",
    "debug:android": "node scripts/debug-android.js",
    "debug:android:verbose": "node scripts/debug-android.js --verbose",
    "debug:android:clear": "node scripts/debug-android.js --clear",
    "debug:web": "node scripts/debug-web.js",
    "debug:web:verbose": "node scripts/debug-web.js --verbose",
    "debug:electron": "node scripts/debug-electron.js",
    "debug:electron:verbose": "node scripts/debug-electron.js --verbose",
    "debug:app": "pnpmdebug:android",
    "debug:cli": "pnpm --cwd apps/desktop dev --verbose --debug",
    "logcat": "adb logcat | grep -i syncstuff",
    "logcat:clear": "adb logcat -c",
    "doctor": "node scripts/doctor.js",
    "check-secrets": "node scripts/check-secrets.js",
    "build:ui": "pnpm --cwd packages/ui build",
    "build:shared": "pnpm --cwd packages/shared build",
    "build:app": "pnpm --cwd apps/mobileapp build",
    "build:web": "pnpm --cwd apps/web build",
    "build:desktop": "pnpm --cwd apps/desktop build",
    "build:api": "pnpm --cwd packages/api deploy",
    "db:create": "pnpm --cwd packages/database create",
    "db:migrate": "pnpm --cwd packages/database migrate",
    "deploy:api": "pnpm --cwd packages/api deploy",
    "deploy:web": "pnpm --cwd apps/web deploy",
    "deploy:db": "pnpm --cwd packages/database deploy",
    "gradle:stop": "pnpm --cwd apps/mobileapp gradle:stop",
    "gradle:clean": "pnpm --cwd apps/mobileapp gradle:clean",
    "app:version:patch": "node scripts/bump-app-version.js --patch",
    "app:version:minor": "node scripts/bump-app-version.js --minor",
    "app:version:major": "node scripts/bump-app-version.js --major",
    "check": "turbo run check",
    "test:app": "pnpm --cwd apps/mobileapp test",
    "electron:dev": "pnpm --cwd apps/mobileapp electron:dev",
    "electron:build": "pnpm --cwd apps/mobileapp electron:build",
    "electron:start": "pnpm --cwd apps/mobileapp electron:start",
    "build:cli": "pnpm --cwd apps/desktop build",
    "dev:cli": "pnpm --cwd apps/desktop dev",
    "publish:cli": "pnpm --cwd apps/desktop build && npm publish --access public",
    "biome:check": "biome check .",
    "biome:fix": "biome check . --write --unsafe --log-level error --log-kind pretty",
    "biome:format:fix": "biome format . --fix",
    "biome:lint": "biome lint .",
    "biome:lint:fix": "biome lint . --fix",
    "biome:format": "biome format ."
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.11",
    "@eslint/js": "9.39.2",
    "@still-forest/biomejs-config": "2.2.0",
    "@types/bun": "1.3.5",
    "globals": "17.0.0",
    "prettier-plugin-organize-imports": "4.3.0",
    "prettier-plugin-tailwindcss": "0.7.2",
    "turbo": "2.7.3",
    "typescript": "5.9.3"
  },
  "engines": {
    "node": ">=20",
    "bun": ">=1.0.0"
  },
  "overrides": {
    "@types/react": "18.2.0",
    "@types/react-dom": "18.2.0",
    "react": "18.2.0",
    "react-dom": "18.2.0"
  },
  "resolutions": {
    "@types/react": "18.2.0",
    "@types/react-dom": "18.2.0",
    "react": "18.2.0",
    "react-dom": "18.2.0"
  }
}
