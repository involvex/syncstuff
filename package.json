{
  "name": "syncstuff-monorepo",
  "version": "0.0.1",
  "private": true,
  "packageManager": "pnpm@11.0.0-alpha.2",
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*",
    "apps/mobileapp/electron"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "format": "biome format . --write",
    "format:check": "biome format .",
    "typecheck": "turbo run typecheck",
    "clean": "turbo run clean",
    "android": "pnpm --filter @syncstuff/app android",
    "web": "pnpm run build:ui && pnpm --filter @syncstuff/web dev",
    "api": "pnpm --filter @syncstuff/api dev",
    "mobile": "pnpm --filter @syncstuff/app android",
    "desktop": "pnpm --filter @syncstuff/desktop dev",
    "debug:android": "node scripts/debug-android.cjs",
    "debug:android:verbose": "node scripts/debug-android.cjs --verbose",
    "debug:android:clear": "node scripts/debug-android.cjs --clear",
    "debug:web": "node scripts/debug-web.cjs",
    "debug:web:verbose": "node scripts/debug-web.cjs --verbose",
    "debug:electron": "node scripts/debug-electron.cjs",
    "debug:electron:verbose": "node scripts/debug-electron.cjs --verbose",
    "debug:app": "pnpm run --filter @syncstuff/app debug:android",
    "debug:cli": "pnpm run --filter @involvex/syncstuff-cli dev --verbose --debug",
    "logcat": "adb logcat | grep -i syncstuff",
    "logcat:clear": "adb logcat -c",
    "doctor": "node scripts/doctor.cjs",
    "check-secrets": "node scripts/check-secrets.cjs",
    "build:ui": "pnpm run --filter @syncstuff/ui build",
    "build:shared": "pnpm run --filter @syncstuff/shared build",
    "build:app": "pnpm run --filter @syncstuff/app build",
    "build:web": "pnpm run build:ui && pnpm run --filter @syncstuff/web build",
    "build:desktop": "pnpm run --filter @involvex/syncstuff-cli build",
    "db:create": "pnpm run --filter @syncstuff/database create",
    "db:migrate": "pnpm run --filter @syncstuff/database migrate",
    "deploy:api": "pnpm run --filter @syncstuff/api deploy",
    "deploy:web": "pnpm run --filter @syncstuff/web deploy",
    "deploy:db": "pnpm run --filter @syncstuff/db deploy",
    "gradle:stop": "pnpm run --filter @syncstuff/app gradle:stop",
    "gradle:clean": "pnpm run --filter @syncstuff/app gradle:clean",
    "app:version:patch": "node scripts/bump-app-version.cjs --patch",
    "app:version:minor": "node scripts/bump-app-version.cjs --minor",
    "app:version:major": "node scripts/bump-app-version.cjs --major",
    "check": "turbo run check",
    "test:app": "pnpm run --filter @syncstuff/app test",
    "electron:dev": "pnpm run --filter @syncstuff/app electron:dev",
    "electron:build": "pnpm run --filter @syncstuff/app electron:build",
    "electron:start": "pnpm run --filter @syncstuff/app electron:start",
    "build:cli": "pnpm run --filter @involvex/syncstuff-cli build",
    "dev:cli": "pnpm run --filter @involvex/syncstuff-cli dev",
    "publish:cli": "pnpm run --filter @involvex/syncstuff-cli build && npm publish --access public",
    "biome:check": "biome check .",
    "biome:fix": "biome check . --write --unsafe --log-level error --log-kind pretty",
    "biome:format:fix": "biome format . --fix",
    "biome:lint": "biome lint .",
    "biome:lint:fix": "biome lint . --fix",
    "biome:format": "biome format ."
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.11",
    "@eslint/js": "9.39.2",
    "@still-forest/biomejs-config": "2.2.0",
    "@tamagui/config": "^1.144.1",
    "@tamagui/core": "^1.144.1",
    "@tamagui/lucide-icons": "^1.144.1",
    "@tamagui/themes": "^1.144.1",
    "@types/bun": "1.3.5",
    "globals": "17.0.0",
    "prettier-plugin-organize-imports": "4.3.0",
    "prettier-plugin-tailwindcss": "0.7.2",
    "tamagui": "^1.144.1",
    "turbo": "2.7.4",
    "typescript": "5.9.3"
  },
  "engines": {
    "node": ">=20",
    "bun": ">=1.0.0"
  },
  "overrides": {
    "@types/react": "18.2.0",
    "@types/react-dom": "18.2.0",
    "react": "18.2.0",
    "react-dom": "18.2.0"
  },
  "resolutions": {
    "@types/react": "18.2.0",
    "@types/react-dom": "18.2.0",
    "react": "18.2.0",
    "react-dom": "18.2.0"
  }
}
